<%- include('partials/header.ejs') %> <%- include('partials/navbar.ejs') %>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Editar Pedido</h1>
    </div>
    <div class="card-body">
      <form action="/pedidos/update" method="post">
        <label for="">Numero do Pedido: </label>
        <input
          type="text"
          name="numero"
          id="numero"
          value="<%= pedido.numero %>"
          class="form-control"
          required
        />
        <label for="">Valor: </label>
        <input
          type="text"
          name="valor"
          id="valor"
          value="<%= pedido.valor %>"
          class="form-control"
          required
        />
        <input type="hidden" name="id" id="id" value="<%= pedido.id %>" />

        <br />
        <input type="submit" name="" class="btn btn-warning" id="" onclick="return confirm('Confirma as alterações feitas no pedido: <%= pedido.numero %>?')" />
      </form>
      <hr>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
